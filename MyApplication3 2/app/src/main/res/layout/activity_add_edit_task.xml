<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/app_color"
    >
    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:padding="8dp"

        android:src="@drawable/back_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Task"
            android:fontFamily="sans-serif-medium"

            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="24dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>
</LinearLayout>
    <EditText
        android:id="@+id/taskNameInput"
        android:layout_width="match_parent"
        android:background="@drawable/round_et"
        android:padding="16dp"
        android:layout_margin="16dp"

        android:layout_height="wrap_content"
        android:hint="Task Name" />

    <EditText
        android:id="@+id/taskDateInput"
        android:layout_width="match_parent"
        android:background="@drawable/round_et"
        android:layout_margin="16dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:hint="Date (e.g., 2024-11-19)" />

    <EditText
        android:id="@+id/taskTimeInput"
        android:layout_width="match_parent"
        android:background="@drawable/round_et"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_margin="12dp"

        android:layout_height="wrap_content"
        android:hint="Time (e.g., 12:00 PM)" />

    <EditText
        android:id="@+id/taskDescriptionInput"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/round_et"
        android:layout_margin="16dp"

        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:hint="Description" />

    <Spinner
        android:id="@+id/taskPrioritySpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        android:layout_marginTop="12dp"
        android:background="@drawable/round_et"
        android:entries="@array/priority_options"
        android:padding="16dp" />

    <Button
        android:id="@+id/saveTaskButton"
        android:layout_width="150dp"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal"
        android:padding="16dp"

        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_height="wrap_content"
        android:text="Save Task" />
</LinearLayout>
